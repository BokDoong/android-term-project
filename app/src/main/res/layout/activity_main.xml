<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
            android:id="@+id/searchCategoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="가게명"
            android:inputType="text" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/getStoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchAllStore"
                android:text="전체 가게 목록 조회"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/getCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchAllCategory"
                android:text="전체 카테고리 목록 조회"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/searchCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="searchDetailInfo"
                android:text="가게 상세 정보 조회"
                android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1" />
    </ScrollView>



</LinearLayout>